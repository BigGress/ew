{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "mapRoot": "",
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": ""
  },
  "include": [
    "./src/app/core/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "./vendor.ts",
    "./polyfills.ts",
    "./e2e"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "debug": true
  }
}
